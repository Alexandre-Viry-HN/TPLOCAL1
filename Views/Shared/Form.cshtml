@model TPLOCAL1.Models.FormModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <title>Formulaire</title>
    <link rel="stylesheet" href="~/resources/Form.css"/>
</head>

<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN"/>
        <h1>Formulaire TP HN avis</h1>
    </header>
    <nav>
        <ul>
            <li><a asp-controller="Home" asp-action="Index" asp-route-id="Index"> Accueil</a></li>
            <li><a asp-controller="Home" asp-action="Index" asp-route-id="OpinionList">Liste avis</a></li>
        </ul>
    </nav>

    <section>
        <form asp-controller="Home" asp-action="ValidationFormulaire" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly"></div>
            <table class="tp-table">
                <tr><th colspan="2" class="tp-th-center">Informations personnelles</th></tr>
                <tr>
                    <td>Nom</td>
                    <td>
                        <input asp-for="Nom" />
                        <span asp-validation-for="Nom"></span>
                    </td>
                </tr>
                <tr>
                    <td>Prénom</td>
                    <td>
                        <input asp-for="Prenom" />
                        <span asp-validation-for="Prenom"></span>
                    </td>
                </tr>
                <tr>
                    <td>Genre</td>
                    <td>
                        <select asp-for="Genre">
                            <option value="">Sélectionnez un sexe</option>
                            <option>Homme</option>
                            <option>Femme</option>
                            <option>Autre</option>
                        </select>
                        <span asp-validation-for="Genre"></span>
                    </td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td>
                        <input asp-for="Adresse" />
                        <span asp-validation-for="Adresse"></span>
                    </td>
                </tr>
                <tr>
                    <td>Code postal</td>
                    <td>
                        <input asp-for="CodePostal" />
                        <span asp-validation-for="CodePostal"></span>
                    </td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td>
                        <input asp-for="Ville" />
                        <span asp-validation-for="Ville"></span>
                    </td>
                </tr>
                <tr>
                    <td>Adresse courriel</td>
                    <td>
                        <input asp-for="Email" />
                        <span asp-validation-for="Email"></span>
                    </td>
                </tr>
            </table>
            <table class="tp-table">
                <tr><th colspan="2" class="tp-th-center">Informations de formation</th></tr>
                <tr>
                    <td>Date de début de la formation</td>
                    <td>
                        <input asp-for="DateDebut" type="date" />
                        <span asp-validation-for="DateDebut"></span>
                    </td>
                </tr>
                <tr>
                    <td>Type de formation</td>
                    <td>
                        <select asp-for="TypeFormation">
                            <option value="">Sélectionnez un cours</option>
                            <option>Formation Cobol</option>
                            <option>Formation par objets</option>
                            <option>Formation à double compétence</option>
                        </select>
                        <span asp-validation-for="Genre"></span>
                    </td>
                </tr>
            </table>
            <table class="tp-table">
                <tr><th colspan="2" class="tp-th-center">Examens de la formation</th></tr>
                <tr>
                    <td>Cobol Formation</td>
                    <td><input asp-for="AvisCobol"/></td>
                </tr>
                <tr>
                    <td>C# Formation</td>
                    <td><input asp-for="AvisCSharp"/></td>
                </tr>
            </table>
            <button type="submit">Validation</button>
        </form>
    </section>

</body>
</html>
